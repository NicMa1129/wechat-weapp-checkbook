.center-flex {
  display: flex;
  justify-content: center;
  align-items: center;
}
.between-flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.icon {
  width: 50rpx;
  height: 50rpx;
  font-size: 50rpx;
  color: #fff;
  text-align: center;
}
.tag-icon {
  color: #fff;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 70rpx;
}
.arrow {
  width: 60rpx;
  height: 60rpx;
  position: relative;
}
.arrow::before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-style: solid;
  border-width: 4rpx;
  border-left-color: #9d9d9d;
  border-top-color: #9d9d9d;
  border-bottom-color: transparent;
  border-right-color: transparent;
}
.arrow.arrow-l::before {
  transform: translate(0, -30%) rotateZ(-45deg);
  top: 40%;
  left: 0;
}
.arrow.arrow-r::before {
  transform: translate(0, -30%) rotateZ(135deg);
  top: 40%;
  left: 50%;
}