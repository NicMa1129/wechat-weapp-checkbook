/**index.wxss**/
 @import "../../libs/iconfont.wxss"; 
 @import '../../common/wxss/base.wxss';
.home-container {
  overflow: hidden;
  position: relative;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 50rpx;
  border-top: 1rpx solid rgba(0, 0, 0, .1);
  box-sizing: border-box;
  background: #fff;
}
.footer .icon-left {
  margin-left: 30rpx;
}
.footer .icon-right {
  margin-right: 30rpx;
}
.footer .write {
  padding: 10rpx 36rpx;
  background: #f5a01f;
  font-size: 44rpx;  
  color: #fff;
  box-sizing: border-box;
  border-radius: 10rpx;
  -webkit-font-smoothing: none;
}
.footer .icon {
  font-size: 56rpx;
  color: #000;
  line-height: 56rpx;
}
.main-info-panel {
  padding: 90rpx 0 20rpx 0;
  width: 100%;
  box-sizing: border-box;
  background: rgba(255, 255, 255, .1);
  overflow: hidden;
}
.main-info-panel .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: -1;
}
.total-last {
  color: #fff;
  text-align: center;
  margin-top: 20rpx;
  overflow: hidden;
  position: relative;
  padding: 0 140rpx;
}
.container .total-last.show {
  max-height: 140rpx;
  transition: all .3s ease-in;
}
.container.hide .total-last.show {
  max-height: 60rpx;
  transition: all .3s ease-in;
}
.container .total-last .num,
.container .total-last .date {
  opacity: 1;
  transition: all .3s ease-in;
}
.container.hide .total-last .num,
.container.hide .total-last .date {
  opacity: 0;
  transition: all .3s ease-in;
}

.container.hide .total-last-hidewrap .num,
.container.hide .total-last-hidewrap .date {
  opacity: 1;
  transition: all .3s ease-in;
}
.container .total-last-hidewrap {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
  transition: all .3s ease-in;
  padding: 2rpx 10rpx;
  border-radius: 40rpx;
  background: rgba(0, 0, 0, .2);
  display: block;
  width: 300rpx;
}
.container .total-last-hidewrap.show {
  opacity: 0;
  top: -100%;
}
.container.hide .total-last-hidewrap.show {
  opacity: 1;
  top: 0;
}
.total-last .num{
  font-size: 70rpx;
  font-weight: 700;
  display: block;
}
.total-last .date {
  font-size: 28rpx;
  display: block;
}
.num1,
.date1 {
  display: inline-block;
  font-size: 28rpx;
}
.income-cost {
  width: 100%;
  box-sizing: border-box;
  color: #fff;
  text-align: center;
  margin-top: 20rpx;
}
.income,
.cost {
  width: 300rpx;
  box-sizing: border-box;
  display: inline-block;
}
.income {
  margin-right: 50rpx;
}
.cost {
  margin-left: 50rpx;
}
.income-cost .num {
  font-size: 40rpx;
  display: block;
}
.income-cost .date {
  font-size: 28rpx;
  display: block;
}
.income-cost .v-line {
  width: 2rpx;
  height: 70rpx;
  background: #fff;
  display: inline-block;
}
.scroll {
  height: 700rpx; 
  /* flex: 1; */
}
.n {
  height: 400rpx;
}
.list {
  background: #ffffff;
  overflow: hidden;
}
.list-block {
  font-size: 0;
  background: #ffffff;
}
.list-block .header-p{
  width: 100%;
  display: none;
  height: 60rpx;
}
.list-block .header-p.fixed{
  display: block;
  width: 100%;
  height: 60rpx;
}
.list-block__header {
  height: 60rpx;
  line-height: 60rpx;
  background: #f8f8f8;
  padding: 10rpx 50rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.list-block__header .ex-in {
  /* flex: 1; */
}
.list-block__header .ex-in .header-expense{
   margin-left: 10px;
   display: inline-block;
}
.ex-in .ex-in__wrap {
  display: inline-block;
}
.list-block__header .ex-in .label {
   display: inline-block;
}
.list-block__body {
  padding: 0 0 0 20rpx;
}
.bg-wall{
  position: fixed;
  left: 0;
  width: 100%;
  bottom: -100%;
  transition: all .4s ease-in-out;
  box-shadow: 0 -3rpx 6rpx 0 rgba(0, 0, 0, .1);
}
.bg-wall.show {
  position: fixed;
  bottom: 0;
  left: 0;
  background: rgba(255, 255, 255, .9);
  padding-bottom: 40rpx;
  padding-top: 30rpx;
  z-index: 9997;
  transition: all .4s ease-in-out;
}
.bg-wall .title {
  padding: 0 40rpx;
  font-size: 28rpx;
  position: relative;
  width: 100%;
  text-align: center;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}
.title .close {
  position: absolute;
  right: 40rpx;
  top: -12rpx;
  font-size: 60rpx;
  color: #9d9d9d;
}
.bgwall-scroll {
  width: 100%;
  height: 60px;
}
.bgwall-scroll__wrap {
  /* width: 620px; */
  overflow: visible;
  font-size: 0;
}
.bg-block {
  width: 80px;
  height: 60px;
  background: rgba(156, 156, 156, .5);
  margin-left: 20px;
  display: inline-block;
  position: relative;
}
.bg-block .bg-preview {
  width: 80px;
  height: 60px;
  overflow: hidden;
}
.bg-block-add::before {
  content: '';
  position: absolute;
  width: 30px;
  height: 4px;
  background: #f8f8f8;
  border-radius: 1px;
  top: 28px;
  left: 25px;
}
.bg-block-add::after{
  content: '';
  position: absolute;
  width: 4px;
  height: 30px;
  background: #f8f8f8;
  border-radius: 2px;
  top: 15px;
  left: 38px;
}
.pic-clip-container {
  position: absolute;
  top: 0;
  left: 100%;
  width: 100%;
  height: 100%;
  z-index: 9998;
  transition: all .3s ease-in-out;
}
.pic-clip-container.show {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9998;
  transition: all .3s ease-in-out;
  background: #9d9d9d;
}
.pic-clip-wrap,
.pic-clip-wrap canvas {
  width: 100%;
  height: 100%;
  position: relative;
}
canvas {
  position: absolute;
  top: 0;
  left: 100%;
  width: 100%;
  height: 100%;
  z-index: 9998;
  transition: all .3s ease-in-out;
}
canvas.show {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9998;
  transition: all .3s ease-in-out;
}
.pic-clip-wrap .cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9998;
  display: flex;
  flex-direction: column;
}
.mask {
  background: rgba(0, 0, 0, .5); 
  width: 100%;
}
.mask.head {
  height: 150px;
}
.mask.foot {
  flex: 1;
}
.carma {
  padding-top: 75%;
  width: 100%;
  opacity: 0;
}
.tool {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 9999;
  background: rgba(0, 0, 0, .6);
  padding: 40rpx;
  box-sizing: border-box;
}
.tool .p {
  font-size: 36rpx;
  color: #ffffff;
}
@media screen and (min-width: 414px){
  .scroll {
     height: 720rpx; 
  }
}