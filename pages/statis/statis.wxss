/* pages/statis/statis.wxss */
@import "../../libs/iconfont.wxss"; 
@import '../../common/wxss/base.wxss';
.statis-container {
  
}
.header {
  border-bottom: 1rpx solid #bdbdbd;
  padding: 15rpx 20rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}
.month-select-panel {
  background: #f8f8f8;
  padding: 20rpx 0;
  font-size: 32rpx;
}
.month-select-panel .p {
  display: inline-block;
  color: #f6c87a;
  width: 100rpx;
  text-align: center;
}
.month-select-panel .label {
  display: inline-block;
  margin: 0 20rpx;
  font-weight: normal;
  font-size: 28rpx;
  color: #9f9f9f;
}
.char-box {
  position: relative;
  background: #ffffff;
  /* padding: 0 30px 0 30px; */
  border-bottom: 1px solid #e8e8e8;
  box-sizing: border-box;
  /* width: 250px;
  height: 250px; */
  margin: 0 auto;
  border: none;
  padding-top: 80%;
  width: 80%;
}
canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  margin: 0 auto;
  border: none;
}
.total-label {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 14;
  text-align: center;
  font-size: 38rpx;
  font-weight: 700;
}
.total-label .p {
  color: #f6c87a;
  font-size: 28rpx;
  margin-top: 14rpx;
}
.charts-label-list {
  height: 416rpx;
  overflow: auto;
  background: #ffffff;
  padding-left: 30rpx;
  padding-right: 30rpx;
  /* min-height: 193px; */
  width: 100%;
  box-sizing: border-box;
  border-top: 1rpx solid #e8e8e8;
}
.scroll-wrap {
  /* padding-right: 40rpx; */
}
.charts-label-list__item {
  padding: 30rpx 20rpx 30rpx 20rpx;
  border-bottom: 1px solid #e8e8e8;
  font-size: 38rpx;
  /* box-sizing: border-box; */
}
.tagName-icon {
  font-size: 36rpx;
}
.tagName-icon .span {
  margin-left: 40rpx;
  width: 200rpx;
}
.num {
  font-weight: 800;
}
.is-empty {
  text-align: center;
  color: #9d9d9d;
  margin-top: 100rpx;
}
@media (min-width: 414px) {
  .charts-label-list {
    height: 430rpx;
  }
}