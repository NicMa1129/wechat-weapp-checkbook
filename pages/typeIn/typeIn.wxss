.header {
  border-bottom: 1rpx solid #bdbdbd;
  padding: 15rpx 20rpx;
  position: relative;
  width: 100%;
  box-sizing: border-box;
}
.close-button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 0;
  z-index: 2;
  width: 50rpx;
  height: 50rpx;
}
.input-box {
  border-bottom: 1rpx solid #eeeeee;
  padding: 30rpx 40rpx;
  width: 100%;
  box-sizing: border-box;
}
.tag-wrap {
  display: flex;
}
.icon {
  background: #f6c87a;
}
.tag-name {
  font-size: 36rpx;
  margin-left: 20rpx;
}
.input-box .input {
  flex: 1; 
  text-align: right;
  font-size: 60rpx;
  font-weight: 700;
  outline: none;
  border: none;
}
.tags-list {
  flex: 1;
  padding: 0 40rpx;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  min-height: 800rpx;
}
.tags-list__row {
  margin-top: 30rpx;
}
.tags-list__item-tagname {
  margin-top: 18rpx;
  font-size: 26rpx;
  text-align: center;
}
.tags-list__item-tagname.selected {
  color: #f6c87a;
}